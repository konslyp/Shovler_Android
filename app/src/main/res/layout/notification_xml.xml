<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="false"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/app_color"></RelativeLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="46dp"
        android:background="@drawable/circle_layout" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="110dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="96dp"
        android:src="@drawable/right_outer_circle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="110dp"
        android:layout_marginTop="96dp"
        android:background="@color/dark_blue"
        android:gravity="center"
        android:padding="8dp"
        android:text="$ 70"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="CAR &amp; DRIVEWAY"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:text="This job has been marked as finished.if you\nwant to upload more pictures add more at the\nfollowing link"
            />

        <Button
            android:id="@+id/add_job_done_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADD JOB DONE PICTURES"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/app_color_border"
            />

        <Button
            android:id="@+id/go_to_job_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GO TO JOB STATUS"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginTop="16dp"
            android:background="@color/app_color"
            android:textColor="@color/white"
            android:drawableRight="@drawable/ic_action_status"
            android:drawablePadding="8dp"
            android:gravity="center"
            />
    </LinearLayout>
</RelativeLayout>
