<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome_bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"

   >

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/wel_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/dark_app_color"
            android:gravity="center">

            <TextView
                android:id="@+id/wel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="WELCOME"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wel"
                android:gravity="center"
                android:text="What would you like to do?"
                android:textColor="@color/white" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/wel_layout"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/become_shoveler"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/shoveler_bg" />

                <TextView
                    android:id="@+id/become_a_shovler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:text="BECOME A\nSHOVELER" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/request_shovler"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:src="@drawable/request_shoveler" />

                <TextView
                    android:id="@+id/request_a_shovler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:text="REQUEST A\nSHOVELER" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
