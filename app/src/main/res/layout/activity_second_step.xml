<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.app.shovelerapp.activity.SecondStepActivity">

    <include
        android:id="@+id/top_layout"
        layout="@layout/title_toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_layout"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <ImageView
            android:id="@+id/number_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/number_image_two" />

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/second_cont"
            android:layout_below="@+id/number_image"
            android:layout_marginBottom="8dp"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/request_bg">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="SCOPE OF WORK"
                        android:id="@+id/textView5"
                        android:textColor="#A48569"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/car_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/open_car"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:text="CAR"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@color/black" />

                            </RelativeLayout>

                            <TextView
                                android:id="@+id/divider_2"
                                android:layout_width="match_parent"
                                android:layout_height="1.0dp"
                                android:layout_marginTop="4dp"
                                android:background="@color/colorGray" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.9"
                                    android:text="FIXED PRICE:"
                                    android:textColor="@color/brown" />

                                <TextView
                                    android:id="@+id/price_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.1"
                                    android:text="$0"
                                    android:textColor="@color/black" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginTop="8dp"
                                android:background="@color/colorGray" />

                            <RelativeLayout
                                android:id="@+id/car_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/divider_2"
                                android:layout_marginTop="8dp"
                                android:padding="0dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="8dp"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/text3"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="MAKE AND MODEL"
                                            android:textColor="@color/brown" />

                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="8dp"
                                            android:background="@drawable/layout_border">

                                            <AutoCompleteTextView
                                                android:id="@+id/model_edit"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_alignParentLeft="true"
                                                android:layout_toLeftOf="@+id/close_btn"
                                                android:background="@android:color/transparent"
                                                android:hint="Enter Model"
                                                android:imeOptions="actionNext"
                                                android:padding="8dp"
                                                android:singleLine="true"
                                                android:textAppearance="?android:attr/textAppearanceSmall" />

                                            <ImageView
                                                android:id="@+id/close_btn"
                                                android:layout_width="24dp"
                                                android:layout_height="24dp"
                                                android:layout_alignParentRight="true"
                                                android:layout_centerVertical="true"
                                                android:layout_marginRight="8dp"
                                                android:background="@drawable/cancel"
                                                android:padding="8dp" />
                                        </RelativeLayout>

                                    </LinearLayout>


                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="0.5dp"
                                        android:layout_marginTop="8dp"
                                        android:background="@color/colorGray" />

                                    <TextView
                                        android:id="@+id/text4"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="16dp"
                                        android:text="SELECT THE CLOSEST COLOR OF YOUR CAR"
                                        android:textColor="@color/brown" />

                                    <com.app.shovelerapp.utils.LineColorPicker xmlns:app="http://schemas.android.com/apk/res-auto"
                                        android:id="@+id/picker"
                                        android:layout_width="match_parent"
                                        android:layout_height="60dp"
                                        android:layout_alignParentLeft="true"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentTop="true"
                                        android:layout_marginTop="8dp"
                                        app:colors="@array/rainbow1"
                                        app:orientation="horizontal"
                                        app:selectedColorIndex="3" />


                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="0.5dp"
                                        android:layout_marginTop="16dp"
                                        android:background="@color/colorGray" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.7"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="16dp"
                                                android:text="LICENSE PLATE NUMBER"

                                                android:textColor="@color/brown" />

                                            <EditText
                                                android:id="@+id/license_edit"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="4dp"
                                                android:background="@drawable/layout_border"
                                                android:hint="Enter license plate number"
                                                android:imeOptions="actionNext"
                                                android:inputType="textCapCharacters"
                                                android:maxLength="10"
                                                android:padding="8dp"
                                                android:singleLine="true"
                                                android:textAppearance="?android:attr/textAppearanceSmall" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="8dp"
                                            android:layout_weight="0.3"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="16dp"
                                                android:text="STATE NAME"
                                                android:textColor="@color/brown" />

                                            <AutoCompleteTextView
                                                android:id="@+id/state_name"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="4dp"
                                                android:background="@drawable/layout_border"
                                                android:imeOptions="actionDone"
                                                android:inputType="textCapCharacters"
                                                android:padding="8dp"
                                                android:singleLine="true"
                                                android:textAppearance="?android:attr/textAppearanceSmall" />
                                        </LinearLayout>


                                    </LinearLayout>


                                    <!-- <TextView
                                         android:layout_width="match_parent"
                                         android:layout_height="0.5dp"
                                         android:layout_marginTop="16dp"
                                         android:background="@color/colorGray" />-->


                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="0.5dp"
                                        android:layout_marginTop="8dp"
                                        android:background="@color/colorGray" />

                                    <RelativeLayout
                                        android:id="@+id/upload_image_layout"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/fixed_price_devider"
                                        android:layout_marginTop="8dp"
                                        android:visibility="visible">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_centerVertical="true"
                                                android:text="UPLOAD PICTURE"
                                                android:textAppearance="?android:textAppearanceSmall"
                                                android:textColor="@color/brown" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:layout_centerVertical="true"
                                                android:text="(OPTIONAL)"
                                                android:textSize="12dp" />
                                        </LinearLayout>

                                        <ImageView
                                            android:id="@+id/upload_image"
                                            android:layout_width="80dp"
                                            android:layout_height="80dp"
                                            android:layout_alignParentRight="true"
                                            android:layout_gravity="center"
                                            android:background="@drawable/rectangle"
                                            android:scaleType="centerCrop" />
                                    </RelativeLayout>

                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/home_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/car_layout"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <RelativeLayout
                                android:id="@+id/home"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:paddingTop="16dp">

                                <TextView
                                    android:id="@+id/open_driveway"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:text="HOME"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@color/black" />

                            </RelativeLayout>

                            <TextView
                                android:id="@+id/divider_1"
                                android:layout_width="match_parent"
                                android:layout_height="1.5dp"
                                android:layout_below="@+id/home"
                                android:layout_marginTop="8dp"
                                android:background="@color/colorGray" />

                            <RelativeLayout
                                android:id="@+id/home_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/divider_1"
                                android:layout_marginTop="4dp"
                                android:padding="4dp"
                                android:visibility="visible">


                                <LinearLayout
                                    android:id="@+id/fixed_price"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="FIXED PRICE :"
                                            android:textAppearance="?android:attr/textAppearanceMedium"
                                            android:textColor="@color/brown" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="4dp"
                                            android:text="Includes: Driveway\n(2 car width x 3 cars in length), \nsidewalk, and walkway" />

                                        <TextView
                                            android:id="@+id/tv_size_restrictions_apply"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="4dp"
                                            android:text="Please Review FAQ"
                                            android:clickable="true"
                                            android:textColor="@color/app_color" />
                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/home_price"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center_vertical|right"
                                        android:text="$0"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:textColor="@color/black" />

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/fixed_price_devider"
                                    android:layout_width="match_parent"
                                    android:layout_height="0.5dp"
                                    android:layout_below="@+id/fixed_price"
                                    android:layout_marginTop="8dp"
                                    android:background="@color/colorGray" />


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/fixed_price_devider"
                                    android:layout_marginTop="8dp">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_centerVertical="true"
                                            android:text="UPLOAD PICTURE"
                                            android:textAppearance="?android:textAppearanceSmall"
                                            android:textColor="@color/brown" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_centerVertical="true"
                                            android:text="(OPTIONAL)"
                                            android:textSize="12dp" />
                                    </LinearLayout>

                                    <ImageView
                                        android:id="@+id/upload_image1"
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        android:layout_alignParentRight="true"
                                        android:layout_gravity="center"
                                        android:background="@drawable/rectangle"
                                        android:scaleType="centerCrop" />
                                </RelativeLayout>

                                <!--  <TextView
                                      android:id="@+id/divider_9"
                                      android:layout_width="match_parent"
                                      android:layout_height="1dp"
                                      android:layout_below="@+id/upload_image_layout"
                                      android:layout_marginTop="16dp"
                                      android:layout_marginBottom="8dp"
                                      android:background="@color/colorAccent" />-->
                            </RelativeLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/business_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/home_layout"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp">

                                <TextView
                                    android:id="@+id/open_business"
                                    android:layout_width="150dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:text="BUSINESS"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@color/black" />


                            </RelativeLayout>

                            <TextView
                                android:id="@+id/divider_3"
                                android:layout_width="match_parent"
                                android:layout_height="1.5dp"
                                android:layout_below="@+id/business_layout"
                                android:layout_marginTop="8dp"
                                android:background="@color/colorGray" />

                            <RelativeLayout
                                android:id="@+id/business_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/divider_3"
                                android:padding="4dp"
                                android:visibility="visible">

                                <LinearLayout
                                    android:id="@+id/size_of_work"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="ENTER SIZE OF WORK"
                                            android:textAppearance="?android:attr/textAppearanceSmall"
                                            android:textColor="@color/brown" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="4dp"
                                            android:text="Includes sidewalks and\nparking lots"
                                            android:textSize="12dp" />

                                        <TextView
                                            android:id="@+id/faq"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="4dp"
                                            android:text="Please Review FAQ"
                                            android:clickable="true"
                                            android:textColor="@color/app_color" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center_vertical|right"
                                        android:orientation="horizontal">

                                        <EditText
                                            android:id="@+id/size_editText"
                                            android:layout_width="80dp"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/layout_border"
                                            android:gravity="center"
                                            android:hint="0"
                                            android:inputType="number"
                                            android:maxLength="4"
                                            android:padding="4dp"
                                            android:singleLine="true" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="8dp"
                                            android:text=" ftÂ²"
                                            android:textAppearance="?android:attr/textAppearanceMedium"
                                            android:textColor="@color/brown" />
                                    </LinearLayout>

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/size_of_work_divider"
                                    android:layout_width="match_parent"
                                    android:layout_height="0.5dp"
                                    android:layout_below="@+id/size_of_work"
                                    android:layout_marginTop="8dp"
                                    android:background="@color/colorGray" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/size_of_work_divider"
                                    android:layout_marginTop="8dp">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_centerVertical="true"
                                            android:text="UPLOAD PICTURE"
                                            android:textAppearance="?android:textAppearanceSmall"
                                            android:textColor="@color/brown" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_centerVertical="true"
                                            android:text="(OPTIONAL)"
                                            android:textSize="12dp" />
                                    </LinearLayout>

                                    <ImageView
                                        android:id="@+id/upload_image2"
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        android:layout_alignParentRight="true"
                                        android:layout_gravity="center"
                                        android:background="@drawable/rectangle"
                                        android:scaleType="centerCrop" />
                                </RelativeLayout>
                            </RelativeLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/divider_4"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_below="@+id/business_layout"
                            android:layout_marginTop="4dp"
                            android:background="@color/colorGray" />

                        <RelativeLayout
                            android:id="@+id/special_imstruction_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/divider_4"
                            android:layout_marginTop="16dp"
                            android:gravity="center_vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true"
                                    android:text="SPECIAL INSTRUCTION"
                                    android:textAppearance="?android:textAppearanceSmall"
                                    android:textColor="@color/brown" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true"
                                    android:text="(OPTIONAL)"
                                    android:textSize="12dp" />
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/add_instruction"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"

                                android:background="@drawable/add" />

                        </RelativeLayout>

                        <EditText
                            android:id="@+id/extra_instruction_edit"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_below="@+id/special_imstruction_layout"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/layout_border"
                            android:gravity="top"
                            android:hint="Enter your instructions here"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:maxLines="3"
                            android:padding="8dp"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/divider_5"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_below="@+id/extra_instruction_edit"
                            android:layout_marginTop="4dp"
                            android:background="@color/colorGray"
                            android:visibility="gone" />
                    </RelativeLayout>
                </LinearLayout>


                <!----><!----><!----><!----><!---->


            </RelativeLayout>
        </ScrollView>

        <Button

            android:id="@+id/second_cont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:background="@color/app_color"
            android:drawableRight="@drawable/ic_action_continue"
            android:text="CONTINUE"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white" />

    </RelativeLayout>


</RelativeLayout>
